<!DOCTYPE html>
<html lang="<%= typeof config.language == 'string' ? config.language : config.language.join(',') %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= ((page.title) ? page.title + ' - ' : '') + config.title + ((config.subtitle) ? "_" + config.subtitle : '') %></title>
    <link rel="shortcut icon" href="<%= config.favicon || theme.favicon || '' %>">
    <link rel="stylesheet" href="<%= theme.cdn.domain || "" %>/css/style.css">
    <link rel="stylesheet" href="<%= theme.cdn.domain || "" %>/css/grid.css">
    <script src="<%= theme.cdn.domain || "" %>/js/app.js"></script>
    <script src="<%= theme.cdn.domain || "" %>/js/srjs.js"></script>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <% if (is_post() || is_page()){ %>
        <meta name="keywords" content="<%= (function () {
            if (!page.categories || !page.tags) {
                return '';
            }
            keywordls = page.categories.data
            keywordls = keywordls.concat(page.tags.data)
            keywords = ''
            for (i in keywordls) {
                keywords += ',' + keywordls[i].name
            }
            return keywords.slice(1)
        })(); %>">
        <%- open_graph({
            description: (page.excerpt || page.description || truncate(strip_html(page.content), {length: 160}) || page.content || config.description || '').replaceAll("\n", '').slice(0, 160) + "..."
        }) %>
    <% } else { %>
        <meta name="keywords" content="<%= config.keywords.slice(0, 157) %>">
        <%- open_graph({
            description: config.description.slice(0, 157) + "..."
        }) %>
    <% } %>
    <script>
        Jian.load.js('<%= theme.cdn.npm_cdn %>/pandown@2.0.0', function () {
            pandown();
        });
    </script>
    <meta name="follow.it-verification-code" content="LlmddNY7dr0ZbV24UdUh"/>
    <meta name="360-site-verification" content="6e6223d4a72a81e520e67080db00fda6"/>
    <meta name="baidu-site-verification" content="codeva-Oz6pd5JcaV"/>
</head>
<body>
<%- partial('_plugins/other/main') %>
<div class="loading_page"><div class="loading_i center"></div><style>*{transition:none}.loading_i{visibility:visible}body{visibility:hidden}</style></div>
<header class="header card bg-<%- theme.color.theme || "blue" %>" id="header">
    <div class="blog-logo">
        <a href="<%- url_for() %>" class="logo"><%= config.title %></a>
    </div>
    <nav class="navbar">
        <ul class="menu">
            <% for (name in theme.menu) { %>
                <li class="menu-item">
                    <% if (!theme.menu[name].url) {%>
                        <a href="<%- url_for(theme.menu[name]) %>" class="menu-item-link"><%= name %></a>
                    <% } else { %>
                        <a href="<%- url_for(theme.menu[name].url) %>" class="menu-item-link" aria-label="<%= name %>" title="<%= name %>"><%- theme.menu[name].icon %></a>
                    <% } %>
                </li>
            <% } %>
            <li class="menu-item">
                <a href="javascript:Jian.dark.change()" class="menu-item-link" aria-label="暗色模式" title="暗色模式"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-moon-fill" viewBox="0 0 16 16">
  <path d="M6 .278a.77.77 0 0 1 .08.858 7.2 7.2 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277q.792-.001 1.533-.16a.79.79 0 0 1 .81.316.73.73 0 0 1-.031.893A8.35 8.35 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.75.75 0 0 1 6 .278"/>
</svg></a>
            </li>
        </ul>
    </nav>
</header>
<div class="msg" id="msg">
</div>
<main class="main w-full grid page-main<%= (page.side === false) ? ' no-side' : '' %><%= (theme.side.post || theme.side.page) ? '' : ' no-side' %>">
    <%- body %>
    <%- partial('_partial/side', {sidels: page.side || (is_post()) ? theme.side.post : theme.side.page}) %>
</main>
<%- partial('_partial/footer') %>
</body>
</html>
